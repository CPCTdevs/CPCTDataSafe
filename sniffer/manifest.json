{
  "manifest_version": 3,
  "name": "CPCT Data Safe",
  "version": "1.0.4",
  "description": "Intercepta dados de telemetria do google para an√°lise.",
  "permissions": [
    "webRequest", 
    "storage", 
    "tabs", 
    "activeTab", 
    "scripting",
    "background",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "https://cpctdatasafe.com.br/data",
    "https://api.cpctdatasafe.com.br/data",
    "https://api.cpctdatasafe.com.br/*",
    "http://api.cpctdatasafe.com.br/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/login.html"
  },
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128":"images/icon128.png"
    },
  "web_accessible_resources": [
    {
      "resources": ["unload-collector.html", "utils/*", "config.js", "interceptor.js", "keys/*"],
      "matches": ["*://*.google.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
